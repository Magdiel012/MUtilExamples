actor MuzzleSmoke3 : MuzzleSmoke
{
	States
	{
	Spawn:
		NULL A 0 A_SetTranslucent(0.25)
		TNT1 A 0 A_JumpIf(GetCVar("smoke_toggle") == 0, "Null")
		SMOK ABC 1 {
			A_FadeOut(0.005);
			A_CustomMissile("MuzzleSmoke4", 0, 0, Random(0, 360), 2, Random(0, 180));
		}
		Goto Death
	Death:
		TNT1 A 1
		Stop
	}
}

