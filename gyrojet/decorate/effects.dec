actor WallSparks
{
	+RANDOMIZE
	+FORCEXYBILLBOARD
	+BOUNCEONFLOORS
	+BOUNCEONCEILINGS
	-NOGRAVITY
	BounceType Grenade
	Damage 0
	BounceFactor 0.1
	WallBounceFactor 0.1
	Speed 75
	Alpha 0.4
	Scale 0.1

	States
	{
	Spawn:
		TNT1 A 0 NoDelay A_JumpIf(GetCVar("weapon_particle_toggle") == 0, "Death")
		PRBM A 12 BRIGHT
		Goto Death
	Death:
		TNT1 A 0
		Stop
	XDeath:
		TNT1 A 0
		Stop
	}
}



actor MuzzleSmoke
{
	+NOGRAVITY
	+NOBLOCKMAP
	+FLOORCLIP
	+FORCEXYBILLBOARD
	+NOINTERACTION
	+DONTSPLASH
	+CLIENTSIDEONLY
	RenderStyle Add
	Speed 1
	Alpha 0.2
	Radius 0
	Height 0
	Scale 0.8

	States
	{
	Spawn:
		NULL A 0 A_SetTranslucent(0.25)
		TNT1 A 0 A_JumpIf(GetCVar("smoke_toggle") == 0, "Null")
		SMOK ABCDEFGHIJKLMNOPQ 3 A_FadeOut(0.005)
		Goto Death
	Death:
		TNT1 A 0
		Stop
	}
}

actor MuzzleSmoke4
{
	-NOGRAVITY
	+CLIENTSIDEONLY
	RenderStyle Add
	MissileType TracerTrail2
	Alpha 0.3
	Radius 2
	Height 2
	Scale 0.8
	PROJECTILE
	Speed 12
	Gravity 0.65

	States
	{
	Spawn:
		NULL A 0 A_SetTranslucent(0.25)
		TNT1 A 0 A_JumpIf(GetCVar("smoke_toggle") == 0, "Null")
		SMOK ABCDEFGHIJKLMNOPQ 2 BRIGHT {
			A_SpawnItem("MuzzleSmoke2");
		}
		Goto Death
	Death:
		TNT1 A 0
		Stop
	}
}


